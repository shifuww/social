<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Create User</title>
  <link rel="icon" type="img/png" href="../img/icon/icon.png">
</head>
<body>
  <h1>Create new user</h1>

  <form id="create-user-form">
    <img width="200" src="https://avatars3.githubusercontent.com/u/1071625?s=400&u=f19e921ec34fc145d2b0b05f6cdd3472240c885b&v=4" alt="">
    <input type="text" name="name" placeholder="name">
    <input type="text" name="username" placeholder="username">
    <input type="text" name="city" placeholder="city">
    <button type="submit">Create</button>
  </form>
  <div style="margin-top: 30px;"><a href="http://localhost:3000/">To main page</a></div>
  <script>
    const form = document.querySelector('#create-user-form')

    form.addEventListener('submit', (e) => {
      e.preventDefault()
      const formData = new FormData(form)
      fetch('http://localhost:3000/create', {
        method: 'POST',
        body: formData
      })
    })
  </script>
</body>
</html>